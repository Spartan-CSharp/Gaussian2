@model GaussianMVC.Models.FullMethodViewModel

@{
	ViewData["Title"] = "Full Method Details";
}

<h1>Details</h1>

@if (Model is not null)
{
	<div>
		<h4>Full Method</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Id)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Keyword)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Keyword)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.SpinStateElectronicStateMethodFamilyName)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.SpinStateElectronicStateMethodFamilyName)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.BaseMethodName)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.BaseMethodName)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.DescriptionHtml)</dt>
			<dd class="col-sm-10">
				<div class="html-description-row">@Html.Raw(Model.DescriptionHtml ?? string.Empty)</div>
			</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedDate)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.LastUpdatedDate)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.LastUpdatedDate)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Archived)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Archived)</dd>
		</dl>
	</div>
	<div>
		@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
		<a asp-action="Index">Back to List</a>
	</div>
}
else
{
	<div>
		<h4>Full Method</h4>
		<hr />
		<p>No Full Method found with this Id.</p>
	</div>
	<div>
		<a asp-action="Index">Back to List</a>
	</div>
}
