@model GaussianMVC.Models.BaseMethodViewModel

@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
	ViewData["Title"] = "Base Method Details";
}

<h1>Details</h1>

@if (Model is not null)
{
	<div>
		<h4>Base Method</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Keyword)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Keyword)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.MethodFamily)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.MethodFamilyList.Where(m => m.Selected == true).First().Text)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DescriptionText)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DescriptionText)
			</dd>
		</dl>
	</div>
	<div>
		@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
		<a asp-action="Index">Back to List</a>
	</div>
}
else
{
	<div>
		<h4>Base Method</h4>
		<hr />
		<p>No Base Method found with this Id.</p>
	</div>
	<div>
		<a asp-action="Index">Back to List</a>
	</div>
}
