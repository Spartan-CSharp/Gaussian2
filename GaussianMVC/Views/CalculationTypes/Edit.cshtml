@model GaussianMVC.Models.CalculationTypeViewModel

@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
	ViewData["Title"] = "Edit Calculation Type";
}

<h1>Edit</h1>

<h4>Calculation Type</h4>
<hr />

@if (Model is not null)
{
	<div class="row">
		<div class="col-md-4">
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Id)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Id)
				</dd>
			</dl>
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Keyword" class="control-label"></label>
					<input asp-for="Keyword" class="form-control" />
					<span asp-validation-for="Keyword" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="DescriptionRtf" class="control-label"></label>
					<input asp-for="DescriptionRtf" class="form-control" />
					<span asp-validation-for="DescriptionRtf" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="DescriptionText" class="control-label"></label>
					<input asp-for="DescriptionText" class="form-control" />
					<span asp-validation-for="DescriptionText" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
			</form>
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.CreatedDate)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.CreatedDate)
				</dd>
			</dl>
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.LastUpdatedDate)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.LastUpdatedDate)
				</dd>
			</dl>
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Archived)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Archived)
				</dd>
			</dl>
		</div>
	</div>
}
else
{
	<p>No calculation type found with this Id.</p>
}

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
