<UserControl x:Class="GaussianWPF.Controls.MethodFamilies.MethodFamiliesDetailsControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GaussianWPF.Controls.MethodFamilies" mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=local:MethodFamiliesDetailsControl}" d:DesignWidth="1240" d:DesignHeight="648" Name="MethodFamiliesDetailsUserControl" FontSize="16">
	<ScrollViewer Name="DetailsScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
		<Grid Name="DetailsGrid">
			<Grid.RowDefinitions>
				<RowDefinition Name="Row0" Height="Auto" />
				<RowDefinition Name="Row1" Height="Auto" />
				<RowDefinition Name="Row2" Height="Auto" />
				<RowDefinition Name="Row3" Height="Auto" />
				<RowDefinition Name="Row4" Height="Auto" />
				<RowDefinition Name="Row5" Height="Auto" />
				<RowDefinition Name="Row6" Height="Auto" />
				<RowDefinition Name="Row7" Height="Auto" />
				<RowDefinition Name="Row8" Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Name="Column0" Width="Auto" />
				<ColumnDefinition Name="Column1" Width="*" />
			</Grid.ColumnDefinitions>

			<!-- Row 0 -->
			<TextBlock Name="DetailsHeaderTextBlock" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 10" FontSize="40" FontWeight="SemiBold" Text="Details" />

			<!-- Row 1 -->
			<TextBlock Name="ErrorMessageTextBlock" Foreground="Red" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 20" MaxWidth="800" FontWeight="SemiBold" TextWrapping="Wrap" Visibility="{Binding IsErrorVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" Text="{Binding ErrorMessage, UpdateSourceTrigger=PropertyChanged}" />

			<!-- Row 2 -->
			<TextBlock Name="DetailsSubheaderTextBlock" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 5" FontSize="24" FontWeight="SemiBold" Text="Method Family" />

			<!-- Row 3 -->
			<Separator Background="Black" Name="DetailsSeparator" Height="3" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 5 0 10" />

			<!-- Row 4 -->
			<TextBlock Name="NoModelTextBlock" Foreground="Red" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 5 10" Visibility="{Binding ModelIsNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" Text="No Method Family found with this Id." />

			<!-- Row 5 -->
			<TextBlock Name="NameLabelTextBlock" Grid.Row="5" Grid.Column="0" Margin="0 0 5 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="Name:" />
			<TextBlock Name="NameTextBlock" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Margin="0 0 0 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="{Binding MethodFamily.Name, UpdateSourceTrigger=PropertyChanged}" />

			<!-- Row 6 -->
			<TextBlock Name="DescriptionTextBlock" Grid.Row="6" Grid.Column="0" Margin="0 0 5 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="Description:" />
			<RichTextBox Name="DescriptionRichTextBox" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="0 0 0 10" MaxWidth="800" IsReadOnly="True" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" BorderThickness="0">
				<FlowDocument Name="DescriptionFlowDocument"></FlowDocument>
			</RichTextBox>

			<!-- Row 7 -->
			<StackPanel Name="ButtonsStackPanel" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
				<Button Name="EditButton" Margin="5" Padding="10 5" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Content="Edit" Tag="{Binding MethodFamilyId, UpdateSourceTrigger=PropertyChanged}" Click="EditButton_Click" />
				<Button Name="BackToIndexButton" Margin="5" Padding="10 5" Content="Back to List" Click="BackToIndexButton_Click" />
			</StackPanel>
		</Grid>
	</ScrollViewer>
</UserControl>
