<UserControl x:Class="GaussianWPF.Controls.SpinStatesElectronicStatesMethodFamilies.SpinStatesElectronicStatesMethodFamiliesDeleteControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GaussianWPF.Controls.SpinStatesElectronicStatesMethodFamilies" mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=local:SpinStatesElectronicStatesMethodFamiliesDeleteControl}" d:DesignWidth="1240" d:DesignHeight="648" Name="SpinStatesElectronicStatesMethodFamiliesDeleteUserControl" FontSize="16">
	<ScrollViewer Name="DeleteScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
		<Grid Name="DeleteGrid">
			<Grid.RowDefinitions>
				<RowDefinition Name="Row0" Height="Auto" />
				<RowDefinition Name="Row1" Height="Auto" />
				<RowDefinition Name="Row2" Height="Auto" />
				<RowDefinition Name="Row3" Height="Auto" />
				<RowDefinition Name="Row4" Height="Auto" />
				<RowDefinition Name="Row5" Height="Auto" />
				<RowDefinition Name="Row6" Height="Auto" />
				<RowDefinition Name="Row7" Height="Auto" />
				<RowDefinition Name="Row8" Height="Auto" />
				<RowDefinition Name="Row9" Height="Auto" />
				<RowDefinition Name="Row10" Height="Auto" />
				<RowDefinition Name="Row11" Height="Auto" />
				<RowDefinition Name="Row12" Height="Auto" />
				<RowDefinition Name="Row13" Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Name="Column0" Width="Auto" />
				<ColumnDefinition Name="Column1" Width="*" />
			</Grid.ColumnDefinitions>

			<!-- Row 0 -->
			<TextBlock Name="DeleteHeaderTextBlock" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 10" FontSize="40" FontWeight="SemiBold" Text="Delete" />

			<!-- Row 1 -->
			<TextBlock Name="ErrorMessageTextBlock" Foreground="Red" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 20" MaxWidth="800" FontWeight="SemiBold" TextWrapping="Wrap" Visibility="{Binding IsErrorVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" Text="{Binding ErrorMessage, UpdateSourceTrigger=PropertyChanged}" />

			<!-- Row 2 -->
			<TextBlock Name="DeleteWarningTextBlock" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 5 10" FontSize="28" FontWeight="SemiBold" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="Are you sure you want to delete this?" />

			<!-- Row 3 -->
			<TextBlock Name="DeleteSubheaderTextBlock" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 5" FontSize="24" FontWeight="SemiBold" Text="Spin State/Electronic State/Method Family Combination" />

			<!-- Row 4 -->
			<Separator Background="Black" Name="DeleteSeparator" Height="3" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 5 0 10" />

			<!-- Row 5 -->
			<TextBlock Name="NoModelTextBlock" Foreground="Red" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 5 10" Visibility="{Binding ModelIsNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" Text="No Spin State/Electronic State/Method Family Combination found with this Id." />

			<!-- Row 6 -->
			<TextBlock Name="NameLabelTextBlock" Grid.Row="6" Grid.Column="0" Margin="0 0 5 10" Text="Name:" />
			<TextBlock Name="NameTextBlock" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="0 0 0 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="{Binding SpinStateElectronicStateMethodFamily.Name, UpdateSourceTrigger=PropertyChanged}" />

			<!-- Row 7 -->
			<TextBlock Name="KeywordLabelTextBlock" Grid.Row="7" Grid.Column="0" Margin="0 0 5 10" Text="Keyword:" />
			<TextBlock Name="KeywordTextBlock" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" Margin="0 0 0 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="{Binding SpinStateElectronicStateMethodFamily.Keyword, UpdateSourceTrigger=PropertyChanged}" />

			<!-- Row 8 -->
			<TextBlock Name="ElectronicStateMethodFamilyLabelTextBlock" Grid.Row="8" Grid.Column="0" Margin="0 0 5 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="Electronic State/Method Family Combination:" />
			<TextBlock Name="ElectronicStateMethodFamilyTextBlock" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" Margin="0 0 0 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="{Binding SpinStateElectronicStateMethodFamily.ElectronicStateMethodFamily, UpdateSourceTrigger=PropertyChanged}" />

			<!-- Row 9 -->
			<TextBlock Name="SpinStateLabelTextBlock" Grid.Row="9" Grid.Column="0" Margin="0 0 5 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="Spin State:" />
			<TextBlock Name="SpinStateTextBlock" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left" Margin="0 0 0 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="{Binding SpinStateElectronicStateMethodFamily.SpinState, UpdateSourceTrigger=PropertyChanged}" />

			<!-- Row 10 -->
			<TextBlock Name="DescriptionTextBlock" Grid.Row="10" Grid.Column="0" Margin="0 0 5 10" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Text="Description:" />
			<RichTextBox Name="DescriptionRichTextBox" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Left" Margin="0 0 0 10" MaxWidth="800" IsReadOnly="True" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" BorderThickness="0">
				<FlowDocument Name="DescriptionFlowDocument"></FlowDocument>
			</RichTextBox>

			<!-- Row 11 -->
			<Button Name="DeleteButton" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Left" Margin="5" Padding="20 5" Content="Delete" Click="DeleteButton_Click" />

			<!-- Row 12 -->
			<StackPanel Name="ButtonsStackPanel" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
				<Button Name="BackToIndexButton" Margin="5" Padding="10 5" Visibility="{Binding ModelIsNotNull, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}" Content="Back to List" Click="BackToIndexButton_Click" />
			</StackPanel>
		</Grid>
	</ScrollViewer>
</UserControl>
