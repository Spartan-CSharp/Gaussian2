<UserControl x:Class="GaussianWPF.Controls.PrivacyControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GaussianWPF.Controls" mc:Ignorable="d" d:DesignWidth="1240" d:DesignHeight="648" Name="PrivacyUserControl" FontSize="16">
	<Grid Name="PrivacyGrid">
		<Grid.RowDefinitions>
			<RowDefinition Name="Row0" Height="Auto" />
			<RowDefinition Name="Row1" Height="Auto" />
			<RowDefinition Name="Row2" Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Name="Column0" Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Row 0 -->
		<TextBlock Name="PrivacyHeaderTextBlock" Grid.Row="0" Grid.Column="0" Margin="0 0 0 10" FontSize="40" FontWeight="SemiBold" Text="Privacy" />

		<!-- Row 1 -->
		<TextBlock Name="PrivacyInfoTextBlock" Grid.Row="1" Grid.Column="0" Margin="0 0 0 20" TextWrapping="Wrap" Text="Use this page to detail your site's privacy policy." />
	</Grid>
</UserControl>
