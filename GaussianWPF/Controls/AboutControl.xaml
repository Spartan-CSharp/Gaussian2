<UserControl x:Class="GaussianWPF.Controls.AboutControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GaussianWPF.Controls" mc:Ignorable="d" d:DesignWidth="1240" d:DesignHeight="648" Name="AboutUserControl" FontSize="18">
	<Grid Name="AboutGrid">
		<Grid.RowDefinitions>
			<RowDefinition Name="Row0" Height="Auto" />
			<RowDefinition Name="Row1" Height="Auto" />
			<RowDefinition Name="Row2" Height="Auto" />
			<RowDefinition Name="Row3" Height="Auto" />
			<RowDefinition Name="Row4" Height="Auto" />
			<RowDefinition Name="Row5" Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Name="Column0" Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Row 0 -->
		<TextBlock Name="AboutHeaderTextBlock" Grid.Row="0" Grid.Column="0" Margin="0 0 0 10" FontSize="24" FontWeight="Bold" Text="About" />

		<!-- Row 1 -->
		<TextBlock Name="AppNameTextBlock" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="0 20 0 10" FontSize="42" FontWeight="SemiBold" Text="Gaussian Desktop Application" />

		<!-- Row 2 -->
		<TextBlock Name="DevNameTextBlock" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" Margin="0 0 0 20" FontSize="22" FontWeight="SemiBold" Text="by Pierre J.-L. Plourde &amp; Spartan C#" />

		<!-- Row 3 -->
		<TextBlock Name="AppDescriptionTextBlock" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" Margin="5 0 5 20" TextWrapping="Wrap" Text="This C# application &amp; SQL database allow storing and indexing of results of electronic structure calculations performed with the Gaussian series of programs." />

		<!-- Row 4 -->
		<StackPanel Name="MoreInfoStackPanel" Grid.Row="4" Grid.Column="0" Orientation="Vertical" Margin="0 20 0 20">
			<TextBlock Name="MoreInfoHeaderTextBlock" HorizontalAlignment="Center" FontWeight="SemiBold" Text="For more information:" />
			<TextBlock Name="MoreInfoLinkTextBlock" HorizontalAlignment="Center">
				<Hyperlink Name="MoreInfoHyperLink" NavigateUri="https://github.com/Spartan-CSharp/Gaussian2">https://github.com/Spartan-CSharp/Gaussian2</Hyperlink>
			</TextBlock>
		</StackPanel>
	</Grid>
</UserControl>
