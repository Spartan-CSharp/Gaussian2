<Window x:Class="GaussianWPF.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:GaussianWPF" mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=local:MainWindow}" Name="GaussianMainWindow" Width="1280" Height="720" FontFamily="Segoe UI" FontSize="24" Icon="/Spartan.ico" Title="Gaussian Desktop App" WindowStartupLocation="CenterScreen">
	<Grid Name="MainWindowGrid">
		<Grid.RowDefinitions>
			<RowDefinition Name="Row0" Height="Auto" />
			<RowDefinition Name="Row1" Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Name="Column0" Width="*" />
		</Grid.ColumnDefinitions>
		<Menu Name="MainMenu" Grid.Row="0" Grid.Column="0" Margin="0 0 0 10" FontSize="18" IsMainMenu="True">
			<MenuItem Name="FileMenu" Header="_File">
				<MenuItem Name="Home" Header="_Home" Click="Home_Click" />
				<MenuItem Name="Login" Visibility="{Binding IsLoggedOut, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" Header="_Login" Click="Login_Click" />
				<MenuItem Name="Logout" Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" Header="_Logout" Click="Logout_Click" />
				<MenuItem Name="ExitApplication" Header="E_xit" Click="ExitApplication_Click" />
			</MenuItem>
			<MenuItem Name="SettingsMenu" Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}" Header="_Settings">
				<MenuItem Name="CalculationTypes" Header="Calculation _Types" Click="CalculationTypes_Click" />
				<MenuItem Name="MethodFamilies" Header="Method _Families" Click="MethodFamilies_Click" />
				<MenuItem Name="BaseMethods" Header="Base _Methods" Click="BaseMethods_Click" />
			</MenuItem>
			<MenuItem Name="HelpMenu" Header="_Help">
				<MenuItem Name="About" Header="_About" Click="About_Click" />
				<MenuItem Name="Privacy" Header="_Privacy" Click="Privacy_Click" />
				<MenuItem Name="Contact" Header="_Contact" Click="Contact_Click" />
				<MenuItem Name="Error" Header="_Error" Click="Error_Click" />
			</MenuItem>
		</Menu>
		<ContentControl Name="MainContent" Grid.Row="1" Grid.Column="0" Margin="20 0 20 20" />
	</Grid>
</Window>
